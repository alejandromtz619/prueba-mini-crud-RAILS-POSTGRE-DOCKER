<div class="jumbotron bg-primary text-white text-center py-4 mb-4">
  <h1 class="display-4">Gestión de Empleados</h1>
</div>

<% if notice %>
  <div class="alert alert-info alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<div class="card shadow-lg mb-4">
  <div class="card-header bg-primary text-white">
    <h5 class="mb-0">Lista de Empleados</h5>
  </div>
  <div class="table-responsive">
    <table class="table table-hover table-striped table-bordered mb-0">
      <thead class="table-primary text-center">
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Empleado</th>
          <th scope="col">Cargo</th>
          <th scope="col">Dirección</th>
          <th scope="col">País</th>
          <th scope="col">Ciudad</th>
          <th scope="col" colspan="3">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @empleados.each do |empleado| %>
          <tr>
            <th scope="row" class="text-center"><%= empleado.id %></th>
            <!-- Mostrar nombre del empleado -->
            <td><%= empleado.persona.present? ? empleado.persona.nombre : "Sin datos" %></td>
            <!-- Mostrar cargo del empleado -->
            <td><%= empleado.cargo.present? ? empleado.cargo.descripcion : "Sin datos" %></td>
            <!-- Mostrar dirección -->
            <td><%= empleado.ubicacione.present? ? empleado.ubicacione.direccion : "Sin datos" %></td>
            <!-- Mostrar país -->
            <td><%= empleado.paise.present? ? empleado.paise.pais : "Sin datos" %></td>
            <!-- Mostrar ciudad -->
            <td><%= empleado.ciudade.present? ? empleado.ciudade.ciudad : "Sin datos" %></td>

            <!-- Acciones: Mostrar, Editar, Borrar -->
            <td class="text-center">
              <%= link_to 'Mostrar', empleado, class: "btn btn-sm btn-outline-info" %>
            </td>
            <td class="text-center">
              <%= link_to 'Editar', edit_empleado_path(empleado), class: "btn btn-sm btn-outline-primary" %>
            </td>
            <td class="text-center">
              <%= link_to 'Borrar', empleado, method: :delete, data: { confirm: '¿Estás seguro?' }, class: "btn btn-sm btn-outline-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="d-flex justify-content-end">
  <%= link_to "Nuevo Empleado", new_empleado_path, class: "btn btn-success opacity-75 shadow-sm" %>
</div>
