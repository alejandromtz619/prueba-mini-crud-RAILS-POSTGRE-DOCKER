

<%= form_with(model: ciudade) do |form| %>
  <% if ciudade.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(ciudade.errors.count, "error") %> no se puede guardar:</h2>

      <ul>
        <% ciudade.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @ciudade.errors.include?(:pais_id) %>
    <div class="alert alert-danger" role="alert">
      Â¡Debes seleccionar un pais!
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.label :ciudad %>
    <%= form.text_field :ciudad, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :Paise %>
    <%= form.collection_select :pais_id, Paise.all, :id, :pais, prompt: 'Seleccionar pais' %>
  </div>

  <div class="d-flex justify-content-end">
    <%= form.submit 'Guardar', class: 'btn btn-primary me-2' %>
    <%= link_to 'Cancelar', ciudades_path, class: 'btn btn-secondary' %>
  </div>
<% end %>