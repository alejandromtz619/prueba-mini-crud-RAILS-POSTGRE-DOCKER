<div class="jumbotron bg-primary text-white">
  <h1 class="display-4">Ubicaciones</h1>
</div>

  <% if notice %>
    <p class="alert alert-info"><%= notice %></p>
  <% end %>

  <table class="table table-striped" style="margin: 0; padding: 0;">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Direccion</th>
        <th scope="col">Pais</th>
        <th scope="col">Ciudad</th>
        <th colspan="3" class="text-center">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @ubicaciones.each do |ubicacione| %>
        <tr>
          <th scope="row"><%= ubicacione.id %></th>
          <td><%= ubicacione.direccion %></td>
          <td><%= ubicacione.pais_id && ubicacione.paise ? ubicacione.paise.pais: "Sin datos" %></td>
          <td><%= ubicacione.ciudad_id && ubicacione.ciudade ? ubicacione.ciudade.ciudad : "Sin datos" %></td>

          <td class="col-md-2 text-center">
            <%= link_to 'Mostrar', ubicacione, class: "btn btn-warning" %>
          </td>
          <td class="col-md-2 text-center">
            <%= link_to 'Editar', edit_ubicacione_path(ubicacione), class: "btn btn-primary" %>
          </td>
          <td class="col-md-2 text-center">
            <%= link_to 'Borrar', ubicacione, method: :delete, data: { confirm: 'Estas seguro?' }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "Nueva Direccion", new_ubicacione_path, class: "btn btn-success opacity-75" %>

  <div class="mt-3 p-3">
    <div class="row">
      <div class="col-12">
        </div>
    </div>
  </div>
</div>