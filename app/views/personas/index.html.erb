<div class="jumbotron bg-primary text-white">
  <h1 class="display-4">Personas</h1>
</div>

  <% if notice %>
    <p class="alert alert-info"><%= notice %></p>
  <% end %>

  <table class="table table-striped" style="margin: 0; padding: 0;">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Nombre</th>
        <th scope="col">Edad</th>
        <th scope="col">Cargo</th>
        <th colspan="3" class="text-center">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @personas.each do |persona| %>
        <tr>
          <th scope="row"><%= persona.id %></th>
          <td><%= persona.nombre %></td>
          <td><%= persona.edad %></td>
          <td><%= persona.cargo ? persona.cargo.descripcion : "Sin cargo" %></td>
          <td class="col-md-2 text-center">
            <%= link_to 'Mostrar', persona, class: "btn btn-warning" %>
          </td>
          <td class="col-md-2 text-center">
            <%= link_to 'Editar', edit_persona_path(persona), class: "btn btn-primary" %>
          </td>
          <td class="col-md-2 text-center">
            <%= link_to 'Borrar', persona, method: :delete, data: { confirm: 'Estas seguro?' }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "Nueva Persona", new_persona_path, class: "btn btn-success opacity-75" %>

  <div class="mt-3 p-3">
    <div class="row">
      <div class="col-12">
        </div>
    </div>
  </div>
</div>