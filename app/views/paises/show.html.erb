<div class="container mt-4">
  <!-- Notificación -->
  <% if notice %>
    <div class="alert alert-info alert-dismissible fade show" role="alert" id="notice">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <!-- Detalles del Pais -->
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title mb-4">Detalles del Pais</h2>

      <!-- Pais -->
      <p class="mb-3">
        <strong>Nombre:</strong>
        <span class="text-muted"><%= @paise.pais %></span>
      </p>

      <!-- Botones de acción -->
      <div class="d-flex justify-content-between">
        <%= link_to 'Editar', edit_paise_path(@paise), class: "btn btn-primary me-2" %>
        <%= link_to 'Volver', paises_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
